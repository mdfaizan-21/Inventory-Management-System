<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="ui.controllers.views.DeleteProductController"
      spacing="20" styleClass="view-container">
    
    <Text text="Delete Product" styleClass="view-title">
        <font>
            <Font name="System Bold" size="28"/>
        </font>
    </Text>
    
    <Separator/>
    
    <VBox spacing="15" maxWidth="600">
        <Label text="âš ï¸ Warning: This action cannot be undone!" styleClass="error-label">
            <font>
                <Font size="16" />
            </font>
        </Label>
        
        <HBox spacing="15" alignment="CENTER_LEFT">
            <Label text="Product ID:" styleClass="form-label"/>
            <TextField fx:id="productIdField" promptText="Enter product ID to delete" prefWidth="200" styleClass="text-field"/>
            <Button text="ðŸ” Search" onAction="#handleSearchProduct" styleClass="primary-button"/>
        </HBox>
        
        <VBox fx:id="productDetailsBox" spacing="10" visible="false" managed="false" styleClass="dashboard-card">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            
            <Label text="Product Details:" styleClass="section-title">
                <font>
                    <Font name="System Bold" size="18"/>
                </font>
            </Label>
            
            <GridPane hgap="15" vgap="10">
                <columnConstraints>
                    <ColumnConstraints percentWidth="30"/>
                    <ColumnConstraints percentWidth="70"/>
                </columnConstraints>
                
                <Label text="Product ID:" GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="form-label"/>
                <Label fx:id="idLabel" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                
                <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="form-label"/>
                <Label fx:id="nameLabel" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                
                <Label text="Category:" GridPane.columnIndex="0" GridPane.rowIndex="2" styleClass="form-label"/>
                <Label fx:id="categoryLabel" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                
                <Label text="Available Qty:" GridPane.columnIndex="0" GridPane.rowIndex="3" styleClass="form-label"/>
                <Label fx:id="qtyLabel" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                
                <Label text="Price:" GridPane.columnIndex="0" GridPane.rowIndex="4" styleClass="form-label"/>
                <Label fx:id="priceLabel" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
            </GridPane>
        </VBox>
        
        <Label fx:id="messageLabel" styleClass="error-label" visible="false" wrapText="true"/>
        
        <HBox spacing="15" fx:id="buttonBox" visible="false" managed="false">
            <Button text="ðŸ—‘ï¸ Delete Product" onAction="#handleDeleteProduct" styleClass="primary-button" 
                    style="-fx-background-color: #e74c3c;" prefWidth="150"/>
            <Button text="âŒ Cancel" onAction="#handleCancel" styleClass="secondary-button" prefWidth="150"/>
        </HBox>
    </VBox>
    
</VBox>
