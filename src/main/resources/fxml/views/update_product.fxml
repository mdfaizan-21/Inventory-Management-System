<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="ui.controllers.views.UpdateProductController"
      spacing="20" styleClass="view-container">
    
    <Text text="Update Product" styleClass="view-title">
        <font>
            <Font name="System Bold" size="28"/>
        </font>
    </Text>
    
    <Separator/>
    
    <!-- Search Product -->
    <HBox spacing="15" alignment="CENTER_LEFT">
        <Label text="Product ID:" styleClass="form-label"/>
        <TextField fx:id="searchIdField" promptText="Enter product ID to update" prefWidth="200" styleClass="text-field"/>
        <Button text="ðŸ” Search" onAction="#handleSearchProduct" styleClass="primary-button"/>
    </HBox>
    
    <Separator/>
    
    <!-- Update Form -->
    <GridPane fx:id="updateForm" hgap="20" vgap="15" maxWidth="600" visible="false" managed="false">
        <columnConstraints>
            <ColumnConstraints percentWidth="30"/>
            <ColumnConstraints percentWidth="70"/>
        </columnConstraints>
        
        <Label text="Product ID:" GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="form-label"/>
        <TextField fx:id="productIdField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="0" styleClass="text-field"/>
        
        <Label text="Product Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="form-label"/>
        <TextField fx:id="productNameField" GridPane.columnIndex="1" GridPane.rowIndex="1" styleClass="text-field"/>
        
        <Label text="Category:" GridPane.columnIndex="0" GridPane.rowIndex="2" styleClass="form-label"/>
        <ComboBox fx:id="categoryComboBox" editable="true" prefWidth="400" GridPane.columnIndex="1" GridPane.rowIndex="2" styleClass="combo-box">
            <items>
                <javafx.collections.FXCollections fx:factory="observableArrayList">
                    <String fx:value="Electronics"/>
                    <String fx:value="Clothing"/>
                    <String fx:value="Food"/>
                    <String fx:value="Books"/>
                    <String fx:value="Furniture"/>
                </javafx.collections.FXCollections>
            </items>
        </ComboBox>
        
        <Label text="Available Qty:" GridPane.columnIndex="0" GridPane.rowIndex="3" styleClass="form-label"/>
        <Spinner fx:id="quantitySpinner" editable="true" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="3">
            <valueFactory>
                <SpinnerValueFactory.IntegerSpinnerValueFactory min="0" max="100000" initialValue="0"/>
            </valueFactory>
        </Spinner>
        
        <Label text="Price:" GridPane.columnIndex="0" GridPane.rowIndex="4" styleClass="form-label"/>
        <TextField fx:id="priceField" GridPane.columnIndex="1" GridPane.rowIndex="4" styleClass="text-field"/>
        
        <Label text="Threshold:" GridPane.columnIndex="0" GridPane.rowIndex="5" styleClass="form-label"/>
        <Spinner fx:id="thresholdSpinner" editable="true" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="5">
            <valueFactory>
                <SpinnerValueFactory.IntegerSpinnerValueFactory min="0" max="1000" initialValue="10"/>
            </valueFactory>
        </Spinner>
    </GridPane>
    
    <Label fx:id="messageLabel" styleClass="error-label" visible="false" wrapText="true"/>
    
    <HBox spacing="15" fx:id="buttonBox" visible="false" managed="false">
        <Button text="ðŸ’¾ Update Product" onAction="#handleUpdateProduct" styleClass="primary-button" prefWidth="150"/>
        <Button text="ðŸ”„ Reset" onAction="#handleReset" styleClass="secondary-button" prefWidth="150"/>
    </HBox>
    
</VBox>
