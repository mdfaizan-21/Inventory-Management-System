<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="ui.controllers.LoginController" styleClass="root">
    
    <center>
        <VBox alignment="CENTER" spacing="20" styleClass="login-container">
            <padding>
                <Insets top="30" right="40" bottom="30" left="40"/>
            </padding>
            
            <!-- Title -->
            <Text text="Inventory Management System" styleClass="title">
                <font>
                    <Font name="System Bold" size="32"/>
                </font>
            </Text>
            
            <Text text="Login to your account" styleClass="subtitle">
                <font>
                    <Font size="16"/>
                </font>
            </Text>
            
            <Region minHeight="20"/>
            
            <!-- Login Form -->
            <VBox spacing="15" maxWidth="400" alignment="CENTER">
                
                <!-- Username -->
                <VBox spacing="5">
                    <Label text="Username:" styleClass="label-text"/>
                    <TextField fx:id="usernameField" promptText="Enter username" styleClass="text-field"/>
                </VBox>
                
                <!-- Password -->
                <VBox spacing="5">
                    <Label text="Password:" styleClass="label-text"/>
                    <PasswordField fx:id="passwordField" promptText="Enter password" styleClass="text-field"/>
                </VBox>
                
                <!-- Error Label -->
                <Label fx:id="errorLabel" styleClass="error-label" visible="false"/>
                
                <!-- Buttons -->
                <HBox spacing="15" alignment="CENTER">
                    <Button text="Login" onAction="#handleLogin" styleClass="primary-button" prefWidth="120"/>
                    <Button text="Register" onAction="#handleRegister" styleClass="secondary-button" prefWidth="120"/>
                </HBox>
                
            </VBox>
            
        </VBox>
    </center>
    
</BorderPane>
