<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="ui.controllers.RegisterController" 
      spacing="20" alignment="CENTER" styleClass="register-container">
    
    <padding>
        <Insets top="30" right="40" bottom="30" left="40"/>
    </padding>
    
    <!-- Title -->
    <Text text="Create New Account" styleClass="title">
        <font>
            <Font name="System Bold" size="28"/>
        </font>
    </Text>
    
    <Region minHeight="10"/>
    
    <!-- Registration Form -->
    <VBox spacing="15" maxWidth="400">
        
        <!-- Username -->
        <VBox spacing="5">
            <Label text="Username:" styleClass="label-text"/>
            <TextField fx:id="usernameField" promptText="Enter username" styleClass="text-field"/>
        </VBox>
        
        <!-- Email -->
        <VBox spacing="5">
            <Label text="Email:" styleClass="label-text"/>
            <TextField fx:id="emailField" promptText="Enter email address" styleClass="text-field"/>
        </VBox>
        
        <!-- Password -->
        <VBox spacing="5">
            <Label text="Password:" styleClass="label-text"/>
            <PasswordField fx:id="passwordField" promptText="Enter password" styleClass="text-field"/>
        </VBox>
        
        <!-- Confirm Password -->
        <VBox spacing="5">
            <Label text="Confirm Password:" styleClass="label-text"/>
            <PasswordField fx:id="confirmPasswordField" promptText="Confirm password" styleClass="text-field"/>
        </VBox>
        
        <!-- Role Selection -->
        <VBox spacing="5">
            <Label text="Role:" styleClass="label-text"/>
            <ComboBox fx:id="roleComboBox" promptText="Select role" prefWidth="400" styleClass="combo-box">
                <items>
                    <javafx.collections.FXCollections fx:factory="observableArrayList">
                        <String fx:value="USER"/>
                        <String fx:value="ADMIN"/>
                    </javafx.collections.FXCollections>
                </items>
            </ComboBox>
        </VBox>
        
        <!-- Error/Success Label -->
        <Label fx:id="messageLabel" styleClass="error-label" visible="false" wrapText="true"/>
        
        <!-- Buttons -->
        <HBox spacing="15" alignment="CENTER">
            <Button text="Register" onAction="#handleRegister" styleClass="primary-button" prefWidth="120"/>
            <Button text="Cancel" onAction="#handleCancel" styleClass="secondary-button" prefWidth="120"/>
        </HBox>
        
    </VBox>
    
</VBox>
