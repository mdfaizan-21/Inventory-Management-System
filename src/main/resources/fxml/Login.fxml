<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20" styleClass="root" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.LoginController">
    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>
    
    <!-- Title -->
    <Label text="ðŸ“¦ Inventory Management System" styleClass="title">
        <font>
            <Font name="System Bold" size="24"/>
        </font>
    </Label>
    
    <Label text="Login" styleClass="subtitle">
        <font>
            <Font size="18"/>
        </font>
    </Label>
    
    <!-- Login Form -->
    <VBox spacing="15" alignment="CENTER" maxWidth="400" styleClass="form-container">
        <VBox spacing="5">
            <Label text="Username:" styleClass="label"/>
            <TextField fx:id="usernameField" promptText="Enter your username" styleClass="text-field"/>
        </VBox>
        
        <VBox spacing="5">
            <Label text="Password:" styleClass="label"/>
            <PasswordField fx:id="passwordField" promptText="Enter your password" styleClass="text-field"/>
        </VBox>
        
        <!-- Error Label -->
        <Label fx:id="errorLabel" styleClass="error-label" visible="false"/>
        
        <!-- Buttons -->
        <HBox spacing="15" alignment="CENTER">
            <Button text="Login" onAction="#handleLogin" styleClass="primary-button" prefWidth="120"/>
            <Button text="Register" onAction="#handleRegister" styleClass="secondary-button" prefWidth="120"/>
        </HBox>
    </VBox>
    
    <Label fx:id="statusLabel" styleClass="status-label" visible="false"/>
</VBox>
